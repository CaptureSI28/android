<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:gravity="center">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/editext_background"
        android:inputType="textPersonName"
        android:text="Nom partie"
        android:ems="10"
        android:id="@+id/frag_select_new_nom"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/editext_background"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/frag_select_new_pwd"
        android:layout_gravity="center_horizontal"
        android:text="password"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/editext_background"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/new_game_datedeb"
        android:layout_marginBottom="10dp"
        android:text="Date début"
        android:clickable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/editext_background"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/new_game_datefin"
        android:layout_marginBottom="10dp"
        android:text="Date fin"
        android:focusable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Créer"
        android:id="@+id/frag_select_new_btn"
        android:minHeight="0dp"
        android:textColor="#ffffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créer une nouvelle partie"
        android:theme="@style/Title"
        android:id="@+id/textConnexion"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/editext_background"
        android:inputType="textPersonName"
        android:hint="Nom partie"
        android:ems="10"
        android:id="@+id/frag_select_new_nom"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/editext_background"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/new_game_datedeb"
        android:layout_marginBottom="10dp"
        android:hint="Date début"
        android:focusableInTouchMode="false"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/editext_background"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/new_game_datefin"
        android:layout_marginBottom="10dp"
        android:hint="Date fin"
        android:focusableInTouchMode="false"
        android:focusable="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Partie privée"
        android:id="@+id/checkBoxPrivate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/editext_background"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/frag_select_new_pwd"
        android:layout_gravity="center_horizontal"
        android:hint=""
        android:visibility="invisible"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Créer"
        android:id="@+id/frag_select_new_btn"
        android:minHeight="0dp"
        android:textColor="#ffffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/errorMessage"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        style="@style/errorMessage"/>
</LinearLayout>